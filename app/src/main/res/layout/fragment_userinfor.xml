<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141516"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/avata" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Ngô Xuân Tiến"
                android:textColor="#ffff"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/updateUser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Lưu thông tin"
                    android:textAllCaps="false" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="27dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Tên Đăng Nhập"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <ViewSwitcher
                    android:id="@+id/viewSwitcher1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunter999999"
                        android:textColor="#ffff"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="1dp"
                        android:text="Hunter999999"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/edit1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Địa chỉ Email"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <ViewSwitcher
                    android:id="@+id/viewSwitcher2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="200dp"
                        android:text="Hunter999999"
                        android:textColor="#ffff"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="1dp"
                        android:text="Hunter999999"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/edit2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Ngày Sinh"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <ViewSwitcher
                    android:id="@+id/viewSwitcher3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunter999999"
                        android:textColor="#ffff"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="1dp"
                        android:text="Hunter999999"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/edit3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Địa chỉ"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <ViewSwitcher
                    android:id="@+id/viewSwitcher4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunter999999"
                        android:textColor="#ffff"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editext4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="1dp"
                        android:text="Hunter999999"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/edit4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Gioi tính"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <ViewSwitcher
                    android:id="@+id/viewSwitcher5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunter999999"
                        android:textColor="#ffff"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/editext5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="1dp"
                        android:text="Hunter999999"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </ViewSwitcher>

                <ImageView
                    android:id="@+id/edit5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/edit" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/repairP"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Thay đổi mật khẩu"
                    android:textColor="#ffff"
                    android:textSize="15dp" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>