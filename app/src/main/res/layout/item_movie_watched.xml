<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
android:layout_marginTop="10dp"

    android:layout_height="138dp">

    <androidx.cardview.widget.CardView

        app:cardCornerRadius="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="119dp"
                android:layout_height="138dp"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="7dp">

                <ImageView
                    android:id="@+id/imagewatched"
                    android:layout_width="117dp"
                    android:layout_height="138dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/namewatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Flash" />

                <TextView

                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/namewatched"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tóm tắt:" />

                <TextView

                    android:id="@+id/reviewWatched"
                    android:layout_alignParentBottom="true"
                    android:layout_width="240dp"
                    android:layout_height="46dp"
                  android:textSize="10dp"
                    android:text="djfajsfljaslfjlajfljal;fjljalfjlajfljaslfjflajfljaslfjlajsfljasljflsjfljsalfjasljfljal;fjlajfljaslfjlasjf;ja;j" />

                 />


            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>